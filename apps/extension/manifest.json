{
  "manifest_version": 3,
  "name": "DoNotStay",
  "version": "1.1.4",
  "description": "Know which hotels to avoid before you book.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://www.booking.com/*",
    "http://localhost:3000/*",
    "https://donotstay.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.booking.com/hotel/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://donotstay.app/*", "http://localhost:3000/*"],
      "js": ["auth-listener.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar/*", "src/button/*", "src/badge/*", "assets/*"],
      "matches": ["https://www.booking.com/*"]
    }
  ]
}
